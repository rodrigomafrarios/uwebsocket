{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
//      "@Interfaces/*": ["interfaces/*"],
//      "@Events/*": ["events/*"],
//      "@Adapters/*": ["adapters/*"],
//      "@Models/*": ["models/*"],
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}